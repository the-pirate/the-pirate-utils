{
    "extends": [
        "eslint:recommended",
    ],
    "env": {
        "es6": true,
        "jest/globals": true
    },
    "parserOptions": {
        "parser": "babel-eslint",
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true
        }
    },
    "plugins": ["jest"],
    "globals": {
        "window": true,
        "document": true
    },
    "rules": {
        "semi": [2, "never"],
        "indent": ["error", 4],
        "quotes": [2, "single", { "allowTemplateLiterals": true }]
    }
}
